{
    "height": 32,
    "margin-top": 2,
    "margin-left": 4,
    "margin-bottom": 1,
    "margin-right": 4,
    "mode": "dock",
    "position": "top",
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

    //Modules layout

	"modules-left": [
        //"custom/power",
        "custom/launcher",
        "idle_inhibitor",
        "hyprland/workspaces"
       ],
	
    "modules-center": [
        "custom/ejetar_midia",
        "custom/youtube-music",
        "custom/miniplayer"
            
    ],
	"modules-right": [
        "tray",
        "pulseaudio",
        "custom/updater",
        "network",
        "custom/weather",
        "clock",
        "custom/notification"
    ],
	// Sourced modules
    "pulseaudio": {
    "tooltip": true,
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-muted": "<span color='#7aa2f7'> </span> Muted",
    "on-click": "amixer sset Master toggle",
    "on-click-right": "pavucontrol",
    "tooltip-format": "{desc}",
    "format-icons": {
        "default": [
            "<span color='#7aa2f7'></span>",
            "<span color='#7aa2f7'></span>",
            "<span color='#7aa2f7'></span>"
        ]
    
    }
    },
    // Remover definições dos módulos
    // Remover bloco de configuração de temperature
    // Remover bloco de configuração de custom/cpu_temp
    // Remover bloco de configuração de custom/gpu_temp
    // Remover bloco de configuração de memory
    // Remover bloco de configuração de disk
    "idle_inhibitor": {
    "format": "{icon}",
    "rotate": 0,
    "format-icons": {
        "activated": "󰥔",
        "deactivated": ""
    }
    },
    // Workspaces
    "hyprland/workspaces": {
    "disable-scroll": true,
    "on-click": "activate",
    "all-outputs": true,
    "active-only": false,
    "persistent-workspaces": {
        "1": [],
        "2": [],
        "3": [],
        "4": [],
        "5": [],
        "6": [],
        "7": [],
        "8": [],
        "9": []
    }
    },
    "network": {
        "interval": 2,
        "format-wifi": " {essid} {signalStrength}%",
        "format-ethernet": "⬇️ {bandwidthDownBits} ⬆️ {bandwidthUpBits}",
        "format-disconnected": "󰤭 Sem conexão",
        "tooltip": true,
        "tooltip-format": "IP: {ipaddr}",
        "on-click": "nm-connection-editor"
    }, 
	"backlight": {
		"tooltip": false,
		"format": " {}%",
		"interval":1,
        "on-scroll-up": "light -A 5",
		"on-scroll-down": "light -U 5"
	},
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}  <span color='#F1F1F1'>{capacity}%</span>",
        "format-charging": "<span color='#9ece6a'></span> <span color='#F1F1F1'>{capacity}%</span>",
        "format-plugged": " <span color='#F1F1F1'>{capacity}</span>%",
        "format-alt": "<span color='#F1F1F1'>{time}</span> {icon}",
        "format-icons": [
            "<span color='#f7768e'></span>", 
            "<span color='#e0af68'></span>", 
            "<span color='#e0af68'></span>", 
            "<span color='#9ece6a'></span>", 
            "<span color='#9ece6a'></span>"
        ]
    },
    
    "clock": {
        "format": "{:%H:%M}",
        "rotate": 0,
        "format-alt": "{:%d/%m/%Y}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "interval": 1,
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#7aa2f7'><b>{}</b></span>",
                "weekdays": "<span color='#e0af68'><b>{}</b></span>",
                "today": "<span color='#f7768e'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
 // Sys tray
        "tray": {
        "icon-size": 18,
        "show-passive-items": true,
        "spacing": 10,
        "reverse-direction": true,
        "show-passive-items": true,
        "show-passive-items": true,
        "show-passive-items": true
    },
    "custom/updater": {
    "format": "<span color='#7aa2f7'></span> {}",
    "exec": "$HOME/.config/hypr/scripts/check_and_update.sh",
    "exec-if": "exit 0",
    "return-type": "json",
    "interval": 3600,
    "tooltip": "false",
    "on-click": "kitty --hold bash -c '$HOME/.config/hypr/scripts/upgrade.sh;'",
    "on-click-right": "kitty --hold bash -c '~/.config/hypr/scripts/check_and_update.sh; cat /tmp/waybar-updates-list;'",
    "signal": 8
     },
    // Notification
    "custom/notification": {
    "tooltip": false,
    "justify": "center",
    "format": "{icon}",
    "format-icons": {
    "notification": "󰂚<span foreground='red'><sup></sup></span>",
    "none": "󰂚",
    "dnd-notification": "󰂛<span foreground='red'><sup></sup></span>",
    "dnd-none": "󰂛",
    "inhibited-notification": "󰂚<span foreground='red'><sup></sup></span>",
    "inhibited-none": "󰂚",
    "dnd-inhibited-notification": "󰂛<span foreground='red'><sup></sup></span>",
    "dnd-inhibited-none": "󰂛"
           },
           "return-type": "json",
           "exec-if": "which swaync-client",
           "exec": "swaync-client -swb",
           "on-click": "swaync-client -t -sw",
           "escape": true
       },
    
"custom/launcher": {
    "format": "<span foreground=\"#7aa2f7\"></span>",
    "on-click": "wofi --show drun",
    "on-click-right": "killall wofi"
},
"custom/power": {
    "format": "<span color='#f75f5f'></span>",  // Ícone vermelho com span color
    "tooltip": false,
    "on-click": "wlogout -b 6"
},
    // Remover bloco do custom/network-speed


    "custom/youtube-music": {
        "interval": 2,
        "format": "{text}",
        "return-type": "json",
        "max-length": 60,
        "exec": "$HOME/.config/waybar/modules/youtube_music.py",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next",
        "tooltip": true,
        "escape": true,
        "hide-empty-text": true
    },

    "custom/miniplayer": {
        "interval": 1,
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "exec": "$HOME/.config/waybar/modules/miniplayer.py",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next",
        "tooltip": true
    },
    "custom/weather": {
        "interval": 600,
        "format": "{text}",
        "return-type": "json",
        "exec": "$HOME/.config/waybar/modules/weather_maua.py",
        "tooltip": true,
        "on-click": "$HOME/.config/waybar/modules/weather_maua.py"
    }

}
